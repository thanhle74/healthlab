<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/ObjectManager/etc/config.xsd">
    <!--    INGREDIENTS-->
    <virtualType name="AnnamIngredientsFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
        <arguments>
            <argument name="appliers" xsi:type="array">
                <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
                <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="AnnamIngredientsFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Annam\Ingredients\Model\ResourceModel\Ingredients\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">AnnamIngredientsFilterPool</argument>
        </arguments>
    </virtualType>
    <type name="Annam\Ingredients\Model\ResourceModel\Ingredients\Grid\Collection">
        <arguments>
            <argument name="mainTable" xsi:type="string">insights_ingredients</argument>
            <argument name="eventPrefix" xsi:type="string">insights_ingredients_grid_collection</argument>
            <argument name="eventObject" xsi:type="string">ingredients_grid_collection</argument>
            <argument name="resourceModel" xsi:type="string">Annam\Ingredients\Model\ResourceModel\Ingredients</argument>
        </arguments>
    </type>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="insights_ingredients_listing_data_source" xsi:type="string">Annam\Ingredients\Model\ResourceModel\Ingredients\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Annam\HealthLab\Ui\Component\MassAction\Status\Options">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="urlPath" xsi:type="string">*/*/massStatus</item>
                <item name="paramName" xsi:type="string">status</item>
                <item name="confirm" xsi:type="array">
                    <item name="title" xsi:type="string" translatable="true">Change Status</item>
                    <item name="message" xsi:type="string" translatable="true">Are you sure to change selected record status?</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
